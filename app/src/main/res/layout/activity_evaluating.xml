<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/evaluatingActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/hotdog"
        layout="@layout/hotdog" />

    <View
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80E3E3E3" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"/>

    <com.shlomirex.seefood.OutlinedTextView
        android:id="@+id/textView_evaluating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowRadius="20"
        android:text="@string/evaluating"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_below="@id/progressBar"/>

</RelativeLayout>